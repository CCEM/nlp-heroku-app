{% extends "layout.jinja2" %}
{% block content %}
<!-- HERO SECTION -->
    <section class="hero">
        <div class="reddex">
          <img src="{{ request.static_path('reddex:static/images/white5.png') }}" />
          <div id="summary">
            <h1>Reddex</h1>
            <p>This project identifies and evaluates Reddit comments for tone (positivity, negativity, and objectivity). We do this in two parts: a Chrome browser extension and a web application. Our extension allows the user the option of evaluating each comment when they visit a Reddit comment thread by clicking on the extension icon.</p>          
          <div>
        </div>
    </section>
<div id="main">
  <h1>Subreddits ranked by sentiment analysis</h1>
  <hr>

  <h2>Five most positive subreddits visited by our users</h2>
  <table>
    <thead>
      <td>Subreddit</td>
      <td>Views</td>
      <td>Average Score</td>
    </thead>
    {% for sub in positive %}
    <tr>
      <td>{{ sub[0] }}:</td>
      <td>{{ views[sub[0]] }}</td>
      <td>{{ sub[1] }}</td>
    </tr>
    {% endfor %}
  </table>

  <h2>Five most negative subreddits visited by our users</h2>
  <table>
    <thead>
      <td>Subreddit</td>
      <td>Views</td>
      <td>Average Score</td>
    </thead>
    {% for sub in negative %}
    <tr>
      <td>{{ sub[0] }}:</td>
      <td>{{ views[sub[0]] }}</td>
      <td>{{ sub[1] }}</td>
    </tr>
    {% endfor %}
  </table>

  <h2>Five most neutral subreddits visited by our users</h2>
  <table>
    <thead>
      <td>Subreddit</td>
      <td>Views</td>
      <td>Average Score</td>
    </thead>
    {% for sub in neutral %}
    <tr>
      <td>{{ sub[0] }}:</td>
      <td>{{ views[sub[0]] }}</td>
      <td>{{ sub[1] }}</td>
    </tr>
    {% endfor %}
  </table>
</div>

{% endblock content %}
